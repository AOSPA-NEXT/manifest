<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <remote  name="aospa"
           fetch="https://github.com/AOSPA-NEXT"
           review="gerrit.aospa.co"
           revision="sapphire"/>

  <!-- Build and Core -->
  <remove-project name="platform/build" />
  <project path="build/make" name="android_build" remote="aospa" >
    <copyfile src="core/root.mk" dest="Makefile" />
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
    <linkfile src="core" dest="build/core" />
    <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
    <linkfile src="target" dest="build/target" />
    <linkfile src="tools" dest="build/tools" />
  </project>
  <remove-project name="platform/build/soong" />
  <project path="build/soong" name="android_build_soong" remote="aospa" >
    <linkfile src="root.bp" dest="Android.bp" />
    <linkfile src="bootstrap.bash" dest="bootstrap.bash" />
  </project>

  <!-- Device -->
  <project path="device/qcom/common" name="android_device_qcom_common" remote="aospa" >
    <linkfile dest="vendor/qcom/build/tasks/generate_extra_images.mk" src="generate_extra_images.mk"/>
  </project>
  <project path="device/qcom/sepolicy" name="android_device_qcom_sepolicy" remote="aospa" />
  <project path="device/qcom/sepolicy-legacy" name="android_device_qcom_sepolicy" remote="aospa" revision="sapphire-legacy"/>
  <project path="device/qcom/kernelscripts" name="android_kernel_build" remote="aospa" >
    <linkfile dest="vendor/qcom/build/tasks/kernel_definitions.mk" src="kernel_definitions.mk"/>
  </project>

  <!-- Manifest -->
  <project path="manifest" name="manifest" remote="aospa" />

  <!-- Prebuilts (AOSPA) -->
  <project path="prebuilts/extract-tools" name="android_prebuilts_extract-tools" remote="aospa" clone-depth="1" />
  <project path="prebuilts/tools-pa" name="android_prebuilts_tools-pa" remote="aospa" />

  <!-- Tools (AOSPA) -->
  <project path="tools/extract-utils" name="android_tools_extract-utils" remote="aospa" />

  <!-- Vendor (AOSPA) -->
  <!--<project path="vendor/google/gms" name="ThankYouMario/proprietary_vendor_google_gms" remote="bitbucket" />-->
  <project path="vendor/google/pixel" name="android_vendor_google_pixel" remote="aospa" />
  <project path="vendor/aospa" name="android_vendor_aospa" remote="aospa" >
    <linkfile src="build.sh" dest="rom-build.sh" />
  </project>
  <project path="vendor/qcom/common" name="proprietary_vendor_qcom_common" remote="aospa" />
  <!--<project path="vendor/qcom/sdclang" name="proprietary_vendor_qcom_sdclang" remote="blobs" revision="ruby-12" />-->

</manifest>
